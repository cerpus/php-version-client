{
    "name": "cerpus/version-client",
    "description": "Library to communicate with the versioning API",
    "keywords": ["laravel", "Cerpus Versioning API Client"],
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Thomas Horn Sivertsen",
            "email": "thomass@cerpus.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.0",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "6.5.14",
        "mockery/mockery": "1.2.*"
    },
    "autoload": {
        "psr-4": {
            "Cerpus\\VersionClient\\": "src/"
        }
    },
    "scripts": {
        "post-package-install": [
            "Cerpus\\VersionClient\\config\\Config::packageInstall"
        ]
    }
}
